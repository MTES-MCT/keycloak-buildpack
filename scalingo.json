{
  "name": "Keycloak",
  "description": "Keycloak",
  "logo": "https://www.keycloak.org/resources/images/keycloak_logo_480x108.png",
  "repository": "https://github.com/MTES-MCT/keycloak-buildpack",
  "website": "https://keycloak.org",
  "env": {
    "BUILDPACK_URL": {
      "description": "Buildpack used to deploy Keycloak",
      "value": "https://github.com/MTES-MCT/keycloak-buildpack#master",
      "required": true
    },
    "STACK": {
      "description": "scalingo stack",
      "value": "scalingo-20",
      "required": false
    },
    "JQ_VERSION": {
      "description": "JQ version",
      "value": "1.6",
      "required": false
    },
    "JRE_MAJOR_VERSION": {
      "description": "Java version",
      "value": "latest",
      "required": false
    },
    "KEYCLOAK_VERSION": {
      "description": "keycloak version",
      "value": "latest",
      "required": false
    },
    "KC_PROXY": {
      "description": "see https://www.keycloak.org/server/reverseproxy",
      "value": "edge",
      "required": true
    },
    "KC_HOSTNAME": {
      "description": "host",
      "value": "",
      "required": false
    },
    "KC_HTTP_PORT": {
      "description": "keycloak HTTP listening port (same as Scalingo PORT)",
      "value": "$PORT",
      "required": true
    },
    "KC_HTTPS_PORT": {
      "description": "keycloak HTTPS listening port (same as Scalingo HTTPS PORT)",
      "value": "443",
      "required": true
    },
    "KEYCLOAK_ADMIN": {
      "description": "admin username",
      "value": "",
      "required": true
    },
    "KEYCLOAK_ADMIN_PASSWORD": {
      "description": "admin password",
      "value": "",
      "required": false
    },
    "KC_DB": {
      "description": "database vendor (default postgres)",
      "value": "postgres",
      "required": false
    },
    "KC_DB_URL": {
      "description": "database url: jdbc:postgresql://localhost:5432/keycloak",
      "value": "jdbc:postgresql://localhost:5432/keycloak",
      "required": true
    },
    "KC_DB_USERNAME": {
      "description": "database username",
      "value": "",
      "required": true
    },
    "KC_DB_PASSWORD": {
      "description": "database password",
      "value": "",
      "required": true
    },
    "PROVIDERS": {
      "description": "comma list providers",
      "value": "",
      "required": true
    },
    "MAX_METASPACE_SIZE": {
      "description": "Control max memory available",
      "value": "512m"
    }
  },
  "addons": ["postgresql:postgresql-sandbox"],
  "formation": {
    "web": {
      "amount": 1,
      "size": "S"
    }
  }
}